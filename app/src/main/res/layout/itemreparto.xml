<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombrePersonaje"
        android:text="textView"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_alignBaseline="@+id/tvNombreActor"
        android:layout_alignBottom="@+id/tvNombreActor"
        android:layout_toRightOf="@+id/tvNombreActor"
        android:layout_toEndOf="@+id/tvNombreActor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombreActor"
        android:textStyle="normal|bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>